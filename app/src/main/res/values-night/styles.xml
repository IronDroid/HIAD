<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="myColor">@color/my_color_light</item>
        <item name="backgroundWindow">@color/bg_dark</item>
    </style>

    <style name="AppThemeToolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/whiteText</item>
        <item name="android:textColorSecondary">@color/whiteText</item>
    </style>

    <style name="ButtonDialPadTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/whiteHintText</item>
        <item name="colorButtonNormal">@color/whiteText</item>
    </style>

    <style name="AppCompat.Button.Flat.Common" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:theme">@style/ButtonDialPadTheme</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">@dimen/text_size_dialpad</item>
        <item name="android:paddingTop">@dimen/padding_dialpad</item>
        <item name="android:paddingBottom">@dimen/padding_dialpad</item>
        <item name="android:layout_marginBottom">@dimen/btn_flat_min</item>
        <item name="android:layout_marginLeft">@dimen/btn_flat_min</item>
        <item name="android:layout_marginRight">@dimen/btn_flat_min</item>
    </style>


</resources>
