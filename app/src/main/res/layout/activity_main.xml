<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="bottom"
    android:orientation="vertical"
    sothree:umanoDragView="@+id/toolbar_panel"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoScrollableView="@+id/text_himno"
    sothree:umanoShadowHeight="4dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_flat_padding">

            <TextView
                android:id="@+id/number_himno"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="64dp"
                android:singleLine="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/placeholder_himno"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="56dp"
                android:singleLine="true"
                android:text="@string/placeholder_himno"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/back_space"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|bottom"
                android:background="@drawable/btn_flat_selector"
                android:contentDescription="@string/app_name"
                android:onClick="inputDelete"
                android:paddingRight="@dimen/box_padding"
                android:src="@drawable/ic_backspace_black_24dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:background="@color/flat_pressed" />

        <include layout="@layout/dialpad"  />

        <TextView
            android:padding="@dimen/box_padding"
            android:layout_marginLeft="@dimen/box_padding"
            android:layout_marginRight="@dimen/box_padding"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:layout_height="wrap_content"
            android:text="este espacio es para un versiculo que tenga que ver con el hecho de cantar." />
    </LinearLayout>

    <!--<include layout="@layout/panel_up"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/AppThemeToolbar" />

        <TextView
            android:id="@+id/text_himno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_vertical_margin"
            android:text="1.\n
Cantad alegres al Señor,\n
mortales todos por doquier;\n
servidle siempre con fervor,\n
obedecedle con placer.\n
2.\n
Con gratitud canción alzad\n
al Hacedor que el ser os dio;\n
al Dios excelso venerad,\n
que como Padre nos amó.\n
3.\n
Su pueblo somos: salvará\n
a los que busquen al Señor;\n
ninguno de ellos dejará;\n
él los ampara con su amor.\n

" />

    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
