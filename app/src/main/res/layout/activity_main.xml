<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="bottom"
    android:orientation="vertical"
    sothree:umanoDragView="@+id/toolbar_panel"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoScrollableView="@+id/text_himno"
    sothree:umanoShadowHeight="4dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/number_himno"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginBottom="@dimen/btn_flat_padding"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="64dp"
                android:singleLine="true"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/pound"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="@dimen/btn_flat_padding"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/btn_flat_selector"
                android:contentDescription="@string/app_name"
                android:onClick="inputDelete"
                android:paddingRight="@dimen/box_padding"
                android:src="@drawable/ic_backspace_black_24dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:background="@color/flat_pressed" />

        <include layout="@layout/dialpad" />

    </LinearLayout>

    <!--<include layout="@layout/panel_up"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/AppThemeToolbar" />

        <TextView
            android:id="@+id/text_himno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="asdkañslfkañlskflñajflñasdjfña ña sjdfña jfñlajsdñfja sñldjf añsdhklajsvnevnefvnoinvla" />

    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
