<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_download"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin_half"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/music_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:layout_marginLeft="@dimen/activity_vertical_margin_half"
        android:layout_marginRight="@dimen/activity_vertical_margin_half"
        android:src="@drawable/ic_file_download_white_24dp"
        android:tint="@color/colorAccent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#313131"
                android:id="@+id/title_download"
                android:text="titulo del himno para descargar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:textAppearance="?android:textAppearanceSmall" />

            <ProgressBar
                android:id="@+id/music_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:max="100"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/music_size"
            android:text="tamaÃ±o del archivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:textAppearance="?android:textAppearanceSmall" />
    </LinearLayout>

    <ImageView
        android:id="@+id/music_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_music_note_black_36dp"
        android:tint="@color/colorPrimary"
        android:visibility="gone" />

    <TextView
        android:id="@+id/music_procent"
        android:layout_width="50dp"
        android:text="100%"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/music_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:paddingLeft="@dimen/activity_vertical_margin_half"
        android:paddingRight="@dimen/activity_vertical_margin_half"
        android:src="@drawable/ic_cancel_black_24dp"
        android:tint="@color/colorAccent"
        android:visibility="gone" />
</LinearLayout>