<resources>

    <style name="ButtonDialPadTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccentPressed</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="AppCompat.Button.Flat.Common" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:theme">@style/ButtonDialPadTheme</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/btn_flat_selector</item>
        <item name="android:textSize">@dimen/text_size_dialpad</item>
        <item name="android:paddingTop">@dimen/padding_dialpad</item>
        <item name="android:paddingBottom">@dimen/padding_dialpad</item>
        <item name="android:layout_marginBottom">@dimen/btn_flat_min</item>
        <item name="android:layout_marginLeft">@dimen/btn_flat_min</item>
        <item name="android:layout_marginRight">@dimen/btn_flat_min</item>
    </style>

    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">#ffffff</item>
        <item name="pageColor">@color/colorPrimaryDark</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">3dp</item>
        <item name="centered">true</item>
    </style>

</resources>
